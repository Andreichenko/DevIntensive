<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.MainActivity">

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/coordinator_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/appbar_style">

                <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/collapsing_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:contentScrim="@color/ultramarine"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/profile_image_size"
                        android:fitsSystemWindows="true">


                        <ImageView
                            android:id="@+id/main_profile_image"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/profile_image_size"
                            style="@style/main_imageview"/>


                        <RelativeLayout
                            android:id="@+id/profile_placeholder"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/gray_background"
                            android:visibility="gone">


                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:textColor="@color/white"
                                android:fontFamily="sans-serif-medium"
                                android:layout_centerHorizontal="true"
                                android:layout_above="@+id/photo_placeholder"
                                android:text="@string/activity_main.title.change_profile_photo"/>


                            <ImageView
                                android:id="@+id/photo_placeholder"
                                android:layout_width="@dimen/image_size_90"
                                android:layout_height="@dimen/image_size_90"
                                android:scaleType="centerCrop"
                                android:src="@drawable/add_a_photo_24px"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="@dimen/margin_56"/>
                        </RelativeLayout>
                    </FrameLayout>

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        app:layout_collapseMode="pin"
                        android:layout_width="match_parent"

                        android:layout_height="?attr/actionBarSize"
                        style="@style/toolbar_style"/>


              </android.support.design.widget.CollapsingToolbarLayout>

            </android.support.design.widget.AppBarLayout>


            <include layout="@layout/user_profile_content"/>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fab"
                android:src="@drawable/ic_create_black_24dp"
                app:layout_anchor="@id/appbar"
                app:layout_anchorGravity="bottom|right"
                style="@style/fab_style"/>

        </android.support.design.widget.CoordinatorLayout>


        <android.support.design.widget.NavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/nav_style"
            android:id="@+id/navigation_view"
            app:headerLayout="@layout/drawer_header"
            app:menu="@menu/drawer_menu"/>


    </android.support.v4.widget.DrawerLayout>

</LinearLayout>